    <center>
        <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
            <Tab text="Login">
                <GridPane hgap="10.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                          minWidth="-Infinity" vgap="10.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
                          xmlns:fx="http://javafx.com/fxml/1">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                        <ColumnConstraints hgrow="NEVER" minWidth="10.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="NEVER"/>
                        <RowConstraints vgrow="NEVER"/>
                        <RowConstraints vgrow="NEVER"/>
                        <RowConstraints vgrow="NEVER"/>
                        <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="NEVER"/>
                    </rowConstraints>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <Label text="Log In" GridPane.columnSpan="2147483647" GridPane.halignment="CENTER">
                        <font>
                            <Font name="System Bold" size="13.0"/>
                        </font>
                    </Label>
                    <Label text="Username:" GridPane.rowIndex="1"/>
                    <Label text="Password:" GridPane.rowIndex="2"/>
                    <PasswordField fx:id="passwordTextFieldLogin" prefWidth="200.0" GridPane.columnIndex="1"
                                   GridPane.rowIndex="2"/>
                    <TextField fx:id="usernameTextFieldLogin" prefWidth="200.0" GridPane.columnIndex="1"
                               GridPane.rowIndex="1"/>
                    <Label fx:id="errorLabelLogin" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="3"
                           GridPane.valignment="CENTER"/>
                    <Button fx:id="logInButton" onAction="#clickLogin" mnemonicParsing="false" prefWidth="100.0" text="Log In"
                            GridPane.columnSpan="2" GridPane.halignment="CENTER"
                            GridPane.rowIndex="4" GridPane.valignment="CENTER"/>
                </GridPane>
            </Tab>
            <Tab text="Register">
                <GridPane hgap="10.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                          minWidth="-Infinity" vgap="10.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
                          xmlns:fx="http://javafx.com/fxml/1">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                        <ColumnConstraints hgrow="NEVER" minWidth="10.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="NEVER"/>
                        <RowConstraints vgrow="NEVER"/>
                        <RowConstraints vgrow="NEVER"/>
                        <RowConstraints vgrow="NEVER"/>
                        <RowConstraints vgrow="NEVER"/>
                        <RowConstraints vgrow="NEVER"/>
                        <RowConstraints vgrow="NEVER"/>
                        <RowConstraints vgrow="NEVER"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER"/>
                    </rowConstraints>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <Label text="Sign up" GridPane.columnSpan="2147483647" GridPane.halignment="CENTER">
                        <font>
                            <Font name="System Bold" size="13.0"/>
                        </font>
                    </Label>

                    <Label text="First name:" GridPane.rowIndex="1"/>
                    <Label text="Last name:" GridPane.rowIndex="2"/>
                    <Label text="Username:" GridPane.rowIndex="3"/>
                    <Label text="Address:" GridPane.rowIndex="4"/>
                    <Label text="Email:" GridPane.rowIndex="5"/>
                    <Label text="Password:" GridPane.rowIndex="6"/>

                    <TextField fx:id="fnameTextReg" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    <TextField fx:id="lnameTextReg" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    <TextField fx:id="usernameTextFieldReg" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    <TextField fx:id="addressTextFieldRed" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                    <TextField fx:id="emailTextFieldRed" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                    <PasswordField fx:id="passwordTextFieldReg" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

                    <Label fx:id="errorLabelReg" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="7"
                           GridPane.valignment="CENTER"/>
                    <Button onAction="#clickRegistration" mnemonicParsing="false" prefWidth="100.0" text="Create Account"
                            GridPane.columnSpan="2" GridPane.halignment="CENTER"
                            GridPane.rowIndex="8" GridPane.valignment="CENTER"/>
                </GridPane>
            </Tab>
        </TabPane>
    </center>
</BorderPane>

