<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:id="mainBorderPane" maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="400.0" minWidth="600.0" prefHeight="700.0" prefWidth="1000.0"
            xmlns="http://javafx.com/javafx/10.0.2-internal">
    <center>
        <TabPane fx:id="mainTabPane" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE"
                 BorderPane.alignment="CENTER">
            <Tab fx:id="ordersTab" text="Orders">
                <GridPane vgap="10.0">
                    <rowConstraints>
                        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="40.0" vgrow="NEVER"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS"/>
                    </rowConstraints>
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                        <ChoiceBox fx:id="filterOrdersChoiceBox" prefWidth="150.0"/>
                        <Button fx:id="orderDetailsButton" mnemonicParsing="false" text="Order Details">
                            <HBox.margin>
                                <Insets left="10.0"/>
                            </HBox.margin>
                        </Button>
                        <Button fx:id="addOrderButton" mnemonicParsing="false" text="Add Order">
                            <HBox.margin>
                                <Insets left="10.0"/>
                            </HBox.margin>
                        </Button>
                        <Button fx:id="editOrderButton" mnemonicParsing="false" text="Edit Order">
                            <HBox.margin>
                                <Insets left="10.0"/>
                            </HBox.margin>
                        </Button>
                        <Button fx:id="deleteOrderButton" mnemonicParsing="false" text="Delete Order">
                            <HBox.margin>
                                <Insets left="10.0"/>
                            </HBox.margin>
                        </Button>
                        <Button fx:id="completeOrderButton" mnemonicParsing="false" text="Complete Order">
                            <HBox.margin>
                                <Insets left="10.0"/>
                            </HBox.margin>
                        </Button>
                    </HBox>
                    <TableView fx:id="ordersTable" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1">
                        <columns>
                            <TableColumn fx:id="orderNumberColumn" minWidth="30.0" prefWidth="30.0" text="#"/>
                            <TableColumn fx:id="orderIdColumn" prefWidth="75.0" text="ID"/>
                            <TableColumn fx:id="orderDateColumn" minWidth="125.0" prefWidth="125.0"
                                         text="Date created"/>
                            <TableColumn fx:id="orderUserColumn" minWidth="125.0" prefWidth="125.0" text="User"/>
                            <TableColumn fx:id="orderCouponColumn" minWidth="125.0" prefWidth="125.0" text="Coupon"/>
                        </columns>
                    </TableView>
                </GridPane>
            </Tab>
            <Tab fx:id="productsTab" text="Products">
                <GridPane vgap="10.0">
                    <rowConstraints>
                        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="40.0" vgrow="NEVER"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS"/>
                    </rowConstraints>
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                        <ChoiceBox fx:id="filterProductsChoiceBox" prefWidth="150.0"/>
                        <Button fx:id="addProductButton" mnemonicParsing="false" text="Add Product">
                            <HBox.margin>
                                <Insets left="10.0"/>
                            </HBox.margin>
                        </Button>
                        <Button fx:id="editProductButton" mnemonicParsing="false" text="Edit Product">
                            <HBox.margin>
                                <Insets left="10.0"/>
                            </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" text="Delete Product">
                            <HBox.margin>
                                <Insets left="10.0"/>
                            </HBox.margin>
                        </Button>
                    </HBox>
                    <TableView fx:id="productsTable" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1">
                        <columns>
                            <TableColumn fx:id="productNumberColumn" minWidth="30.0" prefWidth="30.0" text="#"/>
                            <TableColumn fx:id="productIdColumn" prefWidth="75.0" text="ID"/>
                            <TableColumn fx:id="productNameColumn" minWidth="200.0" prefWidth="200.0" text="Product"/>
                            <TableColumn fx:id="productDescriptionColumn" minWidth="200.0" prefWidth="200.0"
                                         text="Description"/>
                            <TableColumn fx:id="productCategoryColumn" minWidth="125.0" prefWidth="125.0"
                                         text="Category"/>
                            <TableColumn fx:id="productPriceColumn" minWidth="125.0" prefWidth="125.0" text="Price"/>
                        </columns>
                    </TableView>
                </GridPane>
            </Tab>
            <Tab fx:id="categoriesTab" text="Categories">
                <GridPane hgap="10.0" vgap="10.0">
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" vgrow="NEVER"/>
                        <RowConstraints minHeight="-Infinity" vgrow="NEVER"/>
                        <RowConstraints vgrow="NEVER"/>
                        <RowConstraints vgrow="NEVER"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS"/>
                    </rowConstraints>
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="NEVER" minWidth="125.0"/>
                    </columnConstraints>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <ListView prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1" GridPane.rowSpan="2147483647">
                        <GridPane.margin>
                            <Insets/>
                        </GridPane.margin>
                    </ListView>
                    <Label text="Category List"/>
                    <Button fx:id="editCategoryButton" mnemonicParsing="false" prefWidth="125.0" text="Edit Category"
                            GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    <Button fx:id="deleteCategoryButton" mnemonicParsing="false" prefWidth="125.0"
                            text="Delete Category" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    <Button fx:id="addCategoryButton" mnemonicParsing="false" prefWidth="125.0" text="Add Category"
                            GridPane.columnIndex="1" GridPane.hgrow="NEVER" GridPane.rowIndex="1"/>
                </GridPane>
            </Tab>
            <Tab fx:id="usersTab" text="Users">
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
            </Tab>
            <Tab fx:id="reportTab" text="Report">
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
            </Tab>
        </TabPane>
    </center>
</BorderPane>
